{
	"name": "blogasek",
	"table": "Blog",
	"items_on_page": 5,

	"select_order_by": "ts_publ DESC, id DESC",

	"mode_user": {
		"select_short": "id, name, ts_publ",
		"select_where": "is_draft = 0"
	},

	"mode_admin": {
		"select_short": "id, name, ts_publ, is_draft",
		"select_where": "1=1"
	},

	"fields": {
		"name": {
			"type": "text",
			"attributes": {
				"placeholder": "Tytuł",
				"class": "wide"
			}
		},
		"ts_publ": {
			"type": "ts"
		},
		"ts_mod": {
			"type": "ts",
			"pre_save": "set now"
		},
		"is_draft": {
			"type": "checkbox",
			"label": "Ukryte"
		},
		"content": {
			"type": "textarea",
			"attributes": {
				"placeholder": "Treść",
				"class": "wide big"
			}
		}
	}
}
